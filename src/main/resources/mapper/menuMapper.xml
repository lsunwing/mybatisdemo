<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.liuwei.yeb.api.mapper.MenuMapper">
    <sql id="Base_Column_List">
        id,name,parent_id,path,staff_id, create_date,update_date,comment
    </sql>

    <!-- 别名在mybatis-config.xml中配置 -->
    <!-- 新增 -->
    <insert id="insertOne" parameterType="com.liuwei.yeb.api.entity.Menu">
        insert into menu(name,parent_id,path,staff_id,create_date,update_date,comment)
        values (#{name},#{parent_id},#{path},#{staff_id},#{create_date},#{update_date},#{comment})
    </insert>

    <!--更新-->
    <update id="updateMenu" parameterType="com.liuwei.yeb.api.entity.Menu">
        update menu
           set name = #{name}, path = #{path}, parent_id=#{parent_id}, staff_id=#{staff_id},
                      create_date = #{create_date}, update_date = #{update_date}, comment=#{comment}
         where id=#{id}
    </update>

    <!-- 删除 -->
    <delete id="deleteOne" parameterType="int">
        delete from menu where id=#{id}

    </delete>

    <!-- 根据父菜单ID查询子菜单 -->
    <select id="selectMenuListByParentId" parameterType="int">
        select <include refid="Base_Column_List"/>
          from menu
         where parent_id=#{parent_id}
    </select>

</mapper>